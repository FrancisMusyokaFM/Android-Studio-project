<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/shoe_shop"
        android:label="@string/app_name"
        android:roundIcon="@drawable/men5"
        android:supportsRtl="true"
        android:theme="@style/Theme.AllShoesShop"
        tools:targetApi="31" >
        <activity
            android:name=".Children"
            android:exported="false"
            android:label="@string/title_activity_children"
            android:theme="@style/Theme.AllShoesShop" />
        <activity
            android:name=".Ladies"
            android:exported="false"
            android:label="@string/title_activity_ladies"
            android:theme="@style/Theme.AllShoesShop" />
        <activity
            android:name=".Gents"
            android:exported="false"
            android:label="@string/title_activity_gents"
            android:theme="@style/Theme.AllShoesShop" />
        <activity
            android:name=".Home"
            android:exported="false"
            android:label="@string/title_activity_home"
            android:theme="@style/Theme.AllShoesShop" />
        <activity
            android:name=".StartingPage"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.AllShoesShop" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>